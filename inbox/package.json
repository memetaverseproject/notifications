{
  "name": "@notifications/inbox",
  "version": "0.0.0",
  "scripts": {
    "prebuild": "copyfiles -u 1 src/**/*.handlebars dist && touch .env",
    "build": "tsc -p tsconfig.json",
    "build:watch": "yarn prebuild && tsc -p tsconfig.json --watch",
    "start": "node --trace-warnings --abort-on-uncaught-exception --unhandled-rejections=strict dist/index.js",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint:check": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@dcl/eslint-config": "^2.1.0",
    "@types/node": "^20.11.24",
    "@well-known-components/test-helpers": "^1.5.6",
    "copyfiles": "^2.4.1",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "dependencies": {
    "@mtvproject/crypto-middleware": "^0.0.0-development",
    "@mtvproject/crypto": "^1.0.0",
    "@dcl/platform-server-commons": "^0.0.4",
    "@mtvproject/schemas": "^1.0.3",
    "@notifications/common": "0.0.0",
    "@well-known-components/env-config-provider": "^1.2.0",
    "@well-known-components/fetch-component": "^2.0.2",
    "@well-known-components/http-server": "^2.1.0",
    "@well-known-components/interfaces": "^1.4.3",
    "@well-known-components/logger": "^3.1.3",
    "@well-known-components/metrics": "^2.1.0",
    "@well-known-components/pg-component": "^0.2.3",
    "handlebars": "^4.7.8"
  }
}
